{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": true
  },
  "include": [
    "config/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "services/**/*.ts" // Inclure le r√©pertoire services
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
  // "include": [
  //   "vite.config.ts",
  //   "config/**/*",
  //   "src/**/*",
  //   "services/**/*",
  // ],
  // "exclude": ["node_modules", "**/*.test.ts"]
}